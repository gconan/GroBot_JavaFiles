<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Servlets -->
	
	
	<servlet>
		<servlet-name>greetServlet</servlet-name>
		<servlet-class>groBot.server.GreetingServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>greetServlet</servlet-name>
		<url-pattern>/groBot/greet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>registration</servlet-name>
		<servlet-class>groBot.servlet.RegistrationServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>registration</servlet-name>
		<url-pattern>/registration</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>grow</servlet-name>
		<servlet-class>groBot.servlet.GrowNowServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>grow</servlet-name>
		<url-pattern>/growNow</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>editSchedule</servlet-name>
		<servlet-class>groBot.servlet.EditScheduleServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>editSchedule</servlet-name>
		<url-pattern>/editSched</url-pattern>
	</servlet-mapping>


	
	<servlet>
		<servlet-name>addBot</servlet-name>
		<servlet-class>groBot.servlet.AddGroBotServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>addBot</servlet-name>
		<url-pattern>/addGB</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>data</servlet-name>
		<servlet-class>groBot.servlet.DataTransferServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>data</servlet-name>
		<url-pattern>/UtEceSeniorDesignTeam33GroBotDataXferCommunicationServlet</url-pattern>
	</servlet-mapping>
	

	<servlet>
		<servlet-name>resetPassword</servlet-name>
		<servlet-class>groBot.servlet.ResetPasswordServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>resetPassword</servlet-name>
		<url-pattern>/resetp</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>changePassword</servlet-name>
		<servlet-class>groBot.servlet.ChangePasswordServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>changePassword</servlet-name>
		<url-pattern>/changep</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>groBot.servlet.LoginServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>groBot.servlet.LogoutServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>schedule</servlet-name>
		<servlet-class>groBot.servlet.NewScheduleServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>schedule</servlet-name>
		<url-pattern>/newSchedule</url-pattern>
	</servlet-mapping>
	
	<servlet>
    	<servlet-name>email</servlet-name>
		<servlet-class>groBot.CronServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>email</servlet-name>
		<url-pattern>/email</url-pattern>
	</servlet-mapping>
	
	<servlet>
    	<servlet-name>DeleteAccount</servlet-name>
		<servlet-class>groBot.servlet.DeleteAccountServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>DeleteAccount</servlet-name>
		<url-pattern>/deleteAccount</url-pattern>
	</servlet-mapping>
	
	<filter>
		<filter-name>ObjectifyFilter</filter-name>
		<filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ObjectifyFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
